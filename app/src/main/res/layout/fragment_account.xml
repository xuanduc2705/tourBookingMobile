<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:text="User Account"
            android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
        android:text="You are NOT logged in yet"
        android:gravity="center" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_logged_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/beach"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Hoia Nam"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="namdepzai@gmail.com"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:inputType="textPassword" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Date of Birth -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Birth:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvDob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="18-12-2002"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Park Tu Liem, Ha Noi"
                    android:layout_weight="3"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btChangeInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change profile"
                android:layout_marginStart="5dp" />

            <Button
                android:id="@+id/btLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout"
                android:layout_marginStart="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>