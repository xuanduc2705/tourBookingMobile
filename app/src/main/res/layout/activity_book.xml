<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:orientation="vertical">

        <TextView
            android:text="Booking Tour"
            android:textSize="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tour:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTourName"
                android:text="Hai Phong City"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvDescrip"
                android:text="Beautiful coastal city with rich culture."
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddress"
                android:text="Hai Phong , Ha Noi"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvStart"
                android:text="8:00 AM 8/8/2024"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvEnd"
                android:text="10:00 AM 10/8/2024"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice"
                android:text="$5"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Num Of People:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/numOfPeople"

                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:inputType="numberDecimal"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTotal"
                android:text="$50"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:gravity="start"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btBook"
            android:layout_weight="1"
            android:text="Book"
            android:layout_marginStart="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCancel"
            android:layout_weight="1"

            android:text="Cancel"
            android:layout_marginStart="5dp"/>

    </LinearLayout>


</LinearLayout>